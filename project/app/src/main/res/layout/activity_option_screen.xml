<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionScreen">

    <TextView
        android:id="@+id/OptScreenHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:text="Class Options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="176dp"
        android:text="Remove Class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OptScreenHeader" />

    <Button
        android:id="@+id/button2"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="84dp"
        android:text="Add Class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OptScreenHeader" />

    <Button
        android:id="@+id/button8"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="372dp"
        android:text="Create Tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OptScreenHeader" />

    <Button
        android:id="@+id/button7"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="276dp"
        android:text="Edit Class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OptScreenHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>